<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_gallery">

    <!-- TODO: Update blank fragment layout -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="63dp"
        android:text="Image Gallery (Shared Storage)"
        android:textAlignment="center"
        android:textColor="#4D63C1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/IVThumb1"
        android:layout_width="135dp"
        android:layout_height="114dp"
        android:layout_marginStart="131dp"
        android:layout_marginBottom="43dp"
        android:src="@drawable/beach"
        app:layout_constraintBottom_toTopOf="@+id/IVThumb2"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/IVThumb2"
        android:layout_width="155dp"
        android:layout_height="161dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="39dp"
        android:src="@drawable/beach1"
        app:layout_constraintBottom_toTopOf="@+id/IVThumb3"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/IVThumb3"
        android:layout_width="167dp"
        android:layout_height="162dp"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="96dp"
        android:src="@drawable/beach_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>